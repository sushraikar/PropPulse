# PropPulse Environment Variables
# This file contains all required environment variables for the PropPulse platform
# Copy this file to .env and fill in the values for your environment

# ==============================
# General Configuration
# ==============================
NODE_ENV=development
DEBUG=false
LOG_LEVEL=info
PORT=8000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000

# ==============================
# Database Configuration
# ==============================
DATABASE_URL=postgresql://postgres:password@localhost:5432/proppulse
DATABASE_SSL=false

# ==============================
# Authentication & Security
# ==============================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRY=86400
COOKIE_SECRET=your-cookie-secret

# ==============================
# Zoho CRM Integration
# ==============================
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REDIRECT_URI=https://auth.proppulse.ai/zoho/callback
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token
ZOHO_API_DOMAIN=https://www.zohoapis.eu
ZOHO_ACCOUNTS_URL=https://accounts.zoho.eu

# ==============================
# Vector Database (Pinecone)
# ==============================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=proppulse-index
PINECONE_NAMESPACE=properties

# ==============================
# OpenAI Configuration
# ==============================
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_COMPLETION_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096

# ==============================
# Azure Configuration
# ==============================
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_RESOURCE_GROUP=proppulse-rg
AZURE_REGION=uaenorth
AZURE_STORAGE_ACCOUNT=proppulsestorage
AZURE_STORAGE_KEY=your-azure-storage-key
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_KEYVAULT_NAME=proppulse-kv

# ==============================
# Supabase Configuration
# ==============================
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# ==============================
# BitOasis OTC API (Payment Rail)
# ==============================
BITOASIS_API_KEY=your-bitoasis-api-key
BITOASIS_API_SECRET=your-bitoasis-api-secret
BITOASIS_API_URL=https://api.bitoasis.net/v1

# ==============================
# PDF Generation
# ==============================
WEASYPRINT_PATH=/usr/bin/weasyprint

# ==============================
# Translation Services
# ==============================
AZURE_TRANSLATOR_KEY=your-azure-translator-key
AZURE_TRANSLATOR_REGION=uaenorth
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com/

# ==============================
# Monitoring & Logging
# ==============================
SENTRY_DSN=your-sentry-dsn
APPLICATION_INSIGHTS_CONNECTION_STRING=your-application-insights-connection-string
